<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".View.LoginActivity">

    <!-- 标题 -->
    <!--<TextView-->
        <!--android:id="@+id/title2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:background="@drawable/toolbarbackground"-->
        <!--android:gravity="center"-->
        <!--android:text="与xxx聊天中"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="23sp" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/back_chart"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="与xxx聊天中"
            android:textColor="#fafafa"
            android:textSize="20sp" />

    </RelativeLayout>
    <!-- 列表 -->
    <!-- cacheColorHint缓存颜色 -->

    <ListView
        android:id="@+id/listview2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:clickable="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent" />

    <!-- 发送框 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/send2"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/ic_menu_send"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fafafa"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emoji1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/e01" />

        <ImageView
            android:id="@+id/emoji2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/e02" />

        <ImageView
            android:id="@+id/emoji3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/e03" />

        <ImageView
            android:id="@+id/emoji4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/e04" />

        <ImageView
            android:id="@+id/emoji5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/e05" />
    </LinearLayout>
</LinearLayout>