<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pull_to_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/qmui_config_color_background">

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="6dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/qmui_config_color_gray_5"
        android:dividerHeight="1dp"
        android:background="#fafafa">

    </ListView>


</com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout>